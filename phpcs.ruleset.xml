<?xml version="1.0"?>
<ruleset name="Chavetas WordPress Theme Coding Standards">

<description>A custom set of code standard rules to check for WordPress theme Chavetas v5.</description>

	<rule ref="WordPress-Core" />
	<rule ref="WordPress-Docs" />
	<rule ref="WordPress-Extra" />

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="soivigol-post-archive" />
		</properties>
	</rule>

	<exclude-pattern>*/docs/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>
